{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- src/ package.json || exit 1",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "env": {
    "VITE_BACKEND_URL": "/api",
    "GLOWMATCH_DB_PATH": "/tmp/data.db"
  }
}